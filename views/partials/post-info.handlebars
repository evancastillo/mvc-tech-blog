<article class="card mb-3">
  <div class="card-header">
    <div class="row">
      <div class="col-12">
        <h3 class="card-title"><a href="/post/{{id}}">{{title}}</a></h3>
      </div>
    </div>
  </div>
  <div class="card-body pt-0">
      <p class="text-end text-muted post-byline">
        Posted by <a href="/user/{{user.id}}" title="see all posts by {{user.username}}">{{user.username}}</a> on {{format_date created_at}}
      </p>
    <p class="card-text">{{{body}}}</p>
    <p><a href="/post/{{id}}">{{comment_count}} {{format_plural 'comment' comment_count}}</a></p>
  </div>
</article>